<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Cặp 1: Ngày thực hiện -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày thực hiện: "
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Cặp 2: Ngày thứ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày thứ: "
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvDayNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Cặp 3: Thời gian thực hiện -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian thực hiện: "
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvScheduleTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Cặp 4: Trạng thái -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái: "
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

    <!-- Thời gian hoàn thành -->
    <LinearLayout
        android:id="@+id/layoutCompletedTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <!-- TextView 1: Thời gian hoàn thành -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian hoàn thành: "
            android:textSize="16sp"
            android:textColor="@color/black" />

        <!-- TextView 2: Giá trị thời gian hoàn thành -->
        <TextView
            android:id="@+id/tvCompletedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Ghi chú - chỉ hiển thị cho thói quen chưa hoàn thành -->
    <LinearLayout
        android:id="@+id/layoutNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ghi chú"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <!-- Ô nhập ghi chú -->
        <EditText
            android:id="@+id/edtNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập ghi chú..."
            android:gravity="top"
            android:minLines="1"
            android:maxLines="5"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Nút lưu đặt bên phải -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSaveNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lưu ghi chú"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:background="@drawable/btn" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>